# Email Configuration Template
# Copy this file to config/email-config.php and fill in your actual values
# DO NOT commit the actual config/email-config.php to version control!

# ===========================================
# SMTP SERVER SETTINGS
# ===========================================

# SMTP Host (your email provider's SMTP server)
SMTP_HOST=smtp.gmail.com

# SMTP Port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP Encryption (tls or ssl)
SMTP_ENCRYPTION=tls

# SMTP Username (usually your full email address)
SMTP_USERNAME=your-email@gmail.com

# SMTP Password (for Gmail, use App Password)
SMTP_PASSWORD=your-app-password-here

# ===========================================
# EMAIL SENDER SETTINGS
# ===========================================

# From Email (should match SMTP_USERNAME)
SMTP_FROM_EMAIL=your-email@gmail.com

# From Name (appears as sender name)
SMTP_FROM_NAME=Morocco Trek Tours - Contact Form

# ===========================================
# EMAIL RECIPIENT SETTINGS
# ===========================================

# Where contact form emails will be sent
RECIPIENT_EMAIL=info@moroccotrektours.com

# Recipient name
RECIPIENT_NAME=Morocco Trek Tours

# ===========================================
# FEATURES
# ===========================================

# Send auto-reply to customer (true/false)
SEND_AUTO_REPLY=true

# Debug mode - set to false in production (true/false)
DEBUG_MODE=true

